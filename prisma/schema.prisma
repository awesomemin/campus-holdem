generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                 @id @default(autoincrement())
  email              String              @unique
  password           String
  nickname           String              @unique
  phoneNumber        String              @unique
  profilePictureUrl  String?
  ppi                Int                 @default(1000)
  ticketBalance      Int                 @default(0)
  created_at         DateTime            @default(now())
  updated_at         DateTime            @default(now())
  games              Participant[]
  ticketTransactions TicketTransaction[]
}

model Game {
  id                         Int           @id @default(autoincrement())
  time                       String
  place                      String
  particifationFee           Int
  rebuyinFee                 Int
  startingChip               Int
  startingBB                 Int
  estimatedDurationInMinutes Int
  maxParticipant             Int
  minParticipant             Int
  participants               Participant[]
}

model Participant {
  game      Game              @relation(fields: [gameId], references: [id])
  gameId    Int
  User      User              @relation(fields: [userId], references: [id])
  userId    Int
  status    ParticipantStatus @default(SUSPENDED)
  rank      Int?
  ppiChange Int?

  @@id([gameId, userId])
}

model TicketTransaction {
  id          Int                   @id @default(autoincrement())
  user        User                  @relation(fields: [userId], references: [id])
  userId      Int
  type        TicketTransactionType
  source      TicketSource
  amount      Int
  description String?
  gameId      Int?
  createdAt   DateTime              @default(now())
}

enum ParticipantStatus {
  CONFIRMED
  SUSPENDED
}

enum TicketTransactionType {
  EARNED
  SPENT
}

enum TicketSource {
  GAME_WIN
  EVENT_REWARD
  NEWCOMER_GIFT
  ADMIN_GRANT
  GAME_REGISTRATION
  MANUAL_ADJUSTMENT
}
